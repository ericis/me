@using System.Security.Principal
<asp-if-authenticated>
    <form id="logoutForm" asp-controller="Account" asp-action="LogOff" asp-anti-forgery="true" method="post" class="navbar-right" role="form">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-controller="Account" asp-action="Manage" title="Manage">Hello <asp-user-name />!</a>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form>
</asp-if-authenticated>
    <asp-if-anonymous>
    <ul class="nav navbar-nav navbar-right">
        <li><a id="registerLink" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a id="loginLink" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
</asp-if-anonymous>